---
// Contact Section Component
import WhatsAppIcon from './WhatsAppIcon.astro';
---

<section id="contacto" class="py-16 md:py-24 bg-gray-50">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <!-- Section Header -->
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-display font-bold text-gray-900 mb-6">
        ¿Hablamos?
      </h2>
      <p class="text-lg md:text-xl text-gray-600 max-w-3xl mx-auto">
        Estoy aquí para ayudarte. Ponte en contacto conmigo para resolver tus dudas o reservar tu cita.
      </p>
    </div>

    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16">
      
      <!-- Contact Information -->
      <div>
        <div class="mb-12">
          <h3 class="text-2xl font-display font-bold text-gray-900 mb-8">
            Información de contacto
          </h3>
          
          <!-- Contact Methods -->
          <div class="space-y-6">
            
            <!-- WhatsApp - Primary -->
            <div class="bg-white rounded-xl p-6 border-2 border-green-200 shadow-sm">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center">
                    <WhatsAppIcon class="w-8 h-8 notification" />
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">WhatsApp <span class="text-green-600">(Recomendado)</span></h4>
                  <p class="text-gray-600 mb-4">Respuesta rápida para citas y consultas</p>
                  <a 
                    href="https://wa.me/34614417513?text=Hola%20Alexandra,%20me%20gustar%C3%ADa%20solicitar%20informaci%C3%B3n" 
                    target="_blank"
                    rel="noopener noreferrer"
                    class="inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 transition-colors duration-200 font-medium"
                  >
                    <WhatsAppIcon class="w-5 h-5 mr-2" />
                    Enviar WhatsApp
                  </a>
                </div>
              </div>
            </div>

            <!-- Phone -->
            <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"/>
                    </svg>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">Teléfono</h4>
                  <p class="text-gray-600 mb-4">Llamadas para consultas urgentes</p>
                  <a 
                    href="tel:+34614417513" 
                    class="text-blue-600 font-semibold hover:text-blue-700 transition-colors duration-200"
                  >
                    614 41 75 13
                  </a>
                </div>
              </div>
            </div>

            <!-- Email -->
            <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"/>
                      <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"/>
                    </svg>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">Email</h4>
                  <p class="text-gray-600 mb-4">Para consultas detalladas</p>
                  <a 
                    href="mailto:alexandrapz.logopeda@gmail.com" 
                    class="text-purple-600 font-semibold hover:text-purple-700 transition-colors duration-200 break-all"
                  >
                    alexandrapz.logopeda@gmail.com
                  </a>
                </div>
              </div>
            </div>

            <!-- Location -->
            <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
              <div class="flex items-start">
                <div class="flex-shrink-0">
                  <div class="w-12 h-12 bg-red-100 rounded-full flex items-center justify-center">
                    <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M5.05 4.05a7 7 0 119.9 9.9L10 18.9l-4.95-4.95a7 7 0 010-9.9zM10 11a2 2 0 100-4 2 2 0 000 4z" clip-rule="evenodd"/>
                    </svg>
                  </div>
                </div>
                <div class="ml-4 flex-1">
                  <h4 class="text-lg font-semibold text-gray-900 mb-2">Ubicación</h4>
                  <p class="text-gray-900 font-medium">Clínica Dra. Díaz Sastre</p>
                  <p class="text-gray-600 mb-4">C/ Ramón y Cajal, 1<br>Centro de Segovia</p>
                  <p class="text-sm text-gray-500">Fácil acceso y céntrica ubicación</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Professional Links -->
        <div>
          <h3 class="text-xl font-semibold text-gray-900 mb-6">
            Encuéntrame también en:
          </h3>
          <div class="flex space-x-4">
            <a 
              href="#" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
              </svg>
              LinkedIn
            </a>
            <a 
              href="#" 
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700 transition-colors duration-200"
            >
              <svg class="w-5 h-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z"/>
              </svg>
              Perfil Google
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>