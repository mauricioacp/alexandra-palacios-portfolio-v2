---
// Floating WhatsApp Button Component
import WhatsAppIcon from './WhatsAppIcon.astro';
---

<div class="floating-whatsapp">
  <a 
    href="https://wa.me/34614417513?text=Hola%20Alexandra,%20me%20gustar%C3%ADa%20solicitar%20informaci%C3%B3n" 
    target="_blank"
    rel="noopener noreferrer"
    class="whatsapp-float-btn"
    aria-label="Contactar por WhatsApp"
    title="¡Escríbeme por WhatsApp!"
  >
    <WhatsAppIcon class="w-8 h-8" animated={true} />
    <span class="tooltip">¡Escríbeme!</span>
  </a>
</div>

<style>
  .floating-whatsapp {
    position: fixed;
    bottom: 25px;
    right: 25px;
    z-index: 100;
  }
  
  .whatsapp-float-btn {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, #25D366 0%, #128C7E 100%);
    border-radius: 50%;
    box-shadow: 0 8px 30px rgba(37, 211, 102, 0.3);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    position: relative;
    overflow: hidden;
    animation: pulse-float 3s ease-in-out infinite;
  }
  
  .whatsapp-float-btn::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(45deg, transparent 30%, rgba(255, 255, 255, 0.3) 50%, transparent 70%);
    transform: translateX(-100%);
    transition: transform 0.6s;
  }
  
  .whatsapp-float-btn:hover::before {
    transform: translateX(100%);
  }
  
  .whatsapp-float-btn:hover {
    transform: scale(1.1) rotateZ(10deg);
    box-shadow: 0 15px 40px rgba(37, 211, 102, 0.4);
  }
  
  .whatsapp-float-btn:active {
    transform: scale(0.95);
  }
  
  /* Tooltip */
  .tooltip {
    position: absolute;
    right: 70px;
    top: 50%;
    transform: translateY(-50%);
    background: #333;
    color: white;
    padding: 8px 12px;
    border-radius: 8px;
    font-size: 14px;
    font-weight: 500;
    white-space: nowrap;
    opacity: 0;
    visibility: hidden;
    transition: all 0.3s ease;
    pointer-events: none;
  }
  
  .tooltip::after {
    content: '';
    position: absolute;
    left: 100%;
    top: 50%;
    transform: translateY(-50%);
    border: 6px solid transparent;
    border-left-color: #333;
  }
  
  .whatsapp-float-btn:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(-50%) translateX(-8px);
  }
  
  /* Floating animation */
  @keyframes pulse-float {
    0%, 100% {
      transform: translateY(0px) scale(1);
      box-shadow: 0 8px 30px rgba(37, 211, 102, 0.3);
    }
    50% {
      transform: translateY(-10px) scale(1.02);
      box-shadow: 0 15px 40px rgba(37, 211, 102, 0.4);
    }
  }
  
  /* Responsive adjustments */
  @media (max-width: 768px) {
    .floating-whatsapp {
      bottom: 20px;
      right: 20px;
    }
    
    .whatsapp-float-btn {
      width: 56px;
      height: 56px;
    }
    
    .tooltip {
      font-size: 12px;
      padding: 6px 10px;
      right: 65px;
    }
  }
  
  /* Hide on very small screens to avoid interference */
  @media (max-width: 480px) {
    .tooltip {
      display: none;
    }
  }
  
  /* Accessibility improvements */
  @media (prefers-reduced-motion: reduce) {
    .whatsapp-float-btn {
      animation: none;
    }
    
    .whatsapp-float-btn:hover {
      transform: scale(1.05);
    }
  }
  
  /* High contrast mode */
  @media (prefers-contrast: high) {
    .whatsapp-float-btn {
      border: 2px solid #fff;
    }
    
    .tooltip {
      border: 1px solid #fff;
    }
  }
</style>