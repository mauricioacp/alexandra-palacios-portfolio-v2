---
// Hero Section Component
import WhatsAppIcon from './WhatsAppIcon.astro';
---

<section id="inicio" class="pt-16 md:pt-20 bg-gradient-to-br from-blue-50 to-white">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-16 md:py-24">
    <div class="grid lg:grid-cols-2 gap-12 lg:gap-16 items-center">
      
      <!-- Content -->
      <div class="lg:pr-8">
        <div class="mb-6">
          <span class="inline-block px-4 py-2 bg-primary-100 text-primary-800 rounded-full text-sm font-medium mb-4">
            Logopeda Especializada en Segovia
          </span>
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-display font-bold text-gray-900 leading-tight mb-6">
            Transforma tu 
            <span class="text-primary-600">comunicación</span>
          </h1>
          <p class="text-xl md:text-2xl text-gray-600 leading-relaxed mb-8">
            Más de <strong class="text-primary-600">17 años</strong> ayudando a niños y adultos a superar desafíos del habla, voz y deglución
          </p>
        </div>

        <!-- Trust indicators -->
        <div class="flex flex-wrap gap-6 mb-8 text-sm text-gray-600">
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>17+ años de experiencia</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Centro de Segovia</span>
          </div>
          <div class="flex items-center">
            <svg class="w-5 h-5 text-green-500 mr-2" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span>Terapia miofuncional</span>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="flex flex-col sm:flex-row gap-4">
          <a 
            href="https://wa.me/34614417513?text=Hola%20Alexandra,%20me%20gustar%C3%ADa%20solicitar%20una%20consulta" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center px-8 py-4 bg-primary-600 text-white text-lg font-semibold rounded-lg hover:bg-primary-700 transform hover:scale-105 transition-all duration-200 shadow-lg hover:shadow-xl"
          >
            <WhatsAppIcon class="w-6 h-6 mr-2" />
            Reservar Consulta
          </a>
          <a 
            href="#servicios" 
            class="inline-flex items-center justify-center px-8 py-4 border-2 border-primary-600 text-primary-600 text-lg font-semibold rounded-lg hover:bg-primary-50 transition-colors duration-200"
          >
            Ver Servicios
          </a>
        </div>
      </div>

      <!-- Enhanced Image Section -->
      <div class="lg:pl-8">
        <div class="relative hero-image-container">
          <!-- Background decoration -->
          <div class="absolute inset-0 bg-gradient-to-tr from-primary-400/20 to-secondary-400/20 rounded-3xl transform rotate-2 scale-105"></div>
          <div class="absolute inset-0 bg-gradient-to-bl from-purple-400/10 to-pink-400/10 rounded-3xl transform -rotate-1 scale-110"></div>
          
          <!-- Main image container -->
          <div class="relative bg-white/80 backdrop-blur-sm p-4 rounded-3xl shadow-2xl border border-white/50 hover:shadow-3xl transition-all duration-500">
            <div class="relative overflow-hidden rounded-2xl">
              <img 
                src="/alexandra.jpg" 
                alt="Alexandra Palacios - Logopeda especializada en terapia miofuncional en Segovia"
                class="w-full h-auto object-cover image-hover-effect"
                loading="eager"
              />
              <!-- Image overlay gradient -->
              <div class="absolute inset-0 bg-gradient-to-t from-black/10 to-transparent opacity-0 hover:opacity-100 transition-opacity duration-300"></div>
            </div>
          </div>
          
          <!-- Floating achievement badges -->
          <div class="absolute -top-6 -right-6 achievement-float">
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-xl border border-white/50">
              <div class="flex items-center space-x-2">
                <div class="w-10 h-10 bg-gradient-to-r from-green-400 to-green-600 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="text-sm font-bold text-gray-900">17+ Años</div>
                  <div class="text-xs text-gray-600">Experiencia</div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="absolute -bottom-6 -left-6 achievement-float" style="animation-delay: 0.5s;">
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-4 shadow-xl border border-white/50">
              <div class="flex items-center space-x-2">
                <div class="w-10 h-10 bg-gradient-to-r from-purple-400 to-purple-600 rounded-full flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="text-sm font-bold text-gray-900">500+</div>
                  <div class="text-xs text-gray-600">Pacientes</div>
                </div>
              </div>
            </div>
          </div>
          
          <div class="absolute top-1/2 -right-8 achievement-float" style="animation-delay: 1s;">
            <div class="bg-white/95 backdrop-blur-sm rounded-2xl p-3 shadow-xl border border-white/50">
              <div class="flex items-center space-x-2">
                <div class="w-8 h-8 bg-gradient-to-r from-blue-400 to-blue-600 rounded-full flex items-center justify-center">
                  <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                  </svg>
                </div>
                <div class="text-left">
                  <div class="text-xs font-bold text-gray-900">95% Éxito</div>
                </div>
              </div>
            </div>
          </div>
          
          <!-- Decorative dots -->
          <div class="absolute top-8 left-8 w-2 h-2 bg-primary-400 rounded-full animate-pulse"></div>
          <div class="absolute bottom-8 right-8 w-3 h-3 bg-secondary-400 rounded-full animate-pulse" style="animation-delay: 0.7s;"></div>
          <div class="absolute top-16 right-12 w-1 h-1 bg-purple-400 rounded-full animate-pulse" style="animation-delay: 1.2s;"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .hero-image-container {
    perspective: 1000px;
  }
  
  .image-hover-effect {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  .image-hover-effect:hover {
    transform: scale(1.02);
  }
  
  .achievement-float {
    animation: float 3s ease-in-out infinite;
  }
  
  @keyframes float {
    0%, 100% {
      transform: translateY(0px);
    }
    50% {
      transform: translateY(-10px);
    }
  }
  
  /* Enhanced shadow */
  .hover\:shadow-3xl:hover {
    box-shadow: 0 35px 60px -12px rgba(0, 0, 0, 0.15), 
                0 25px 50px -12px rgba(74, 144, 226, 0.2);
  }
  
  /* Glassmorphism effect for badges */
  .hero-image-container .bg-white\/95 {
    backdrop-filter: blur(16px);
    -webkit-backdrop-filter: blur(16px);
  }
  
  /* Responsive adjustments */
  @media (max-width: 1024px) {
    .achievement-float {
      position: relative;
      margin: 1rem 0;
      animation: none;
    }
    
    .absolute.-top-6,
    .absolute.-bottom-6,
    .absolute.top-1\/2 {
      position: relative;
      top: auto;
      bottom: auto;
      left: auto;
      right: auto;
      margin: 1rem auto;
      display: flex;
      justify-content: center;
    }
  }
  
  @media (max-width: 768px) {
    .hero-image-container {
      margin-top: 2rem;
    }
    
    .achievement-float > div {
      margin: 0 auto;
      max-width: 200px;
    }
  }
</style>