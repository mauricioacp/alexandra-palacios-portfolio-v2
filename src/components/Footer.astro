            href="https://wa.me/34614417513?text=Hola%20Alexandra,%20me%20gustar%C3%ADa%20solicitar%20una%20cita" 
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center px-6 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors duration-200 font-semibold"
