            target="_blank"
            rel="noopener noreferrer"
            class="bg-green-600 hover:bg-green-700 p-2 rounded-full transition-colors duration-200"
            aria-label="WhatsApp"
          >
            <WhatsAppIcon class="w-6 h-6" />
