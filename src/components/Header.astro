---
// Header Component
---

<header class="fixed top-0 left-0 right-0 bg-white/95 backdrop-blur-sm border-b border-gray-100 z-50">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center h-16 md:h-20">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="#inicio" class="text-xl md:text-2xl font-display font-semibold text-primary-600 hover:text-primary-700 transition-colors">
          Alexandra Palacios
        </a>
      </div>

      <!-- Desktop Navigation -->
      <div class="hidden md:block">
        <div class="ml-10 flex items-baseline space-x-8">
          <a href="#sobre-mi" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">
            Sobre mí
          </a>
          <a href="#servicios" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">
            Servicios
          </a>
          <a href="#testimonios" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">
            Testimonios
          </a>
          <a href="#precios" class="text-gray-700 hover:text-primary-600 px-3 py-2 text-sm font-medium transition-colors">
            Precios
          </a>
          <a 
            href="https://wa.me/34614417513?text=Hola%20Alexandra,%20me%20gustar%C3%ADa%20solicitar%20una%20consulta" 
            target="_blank"
            rel="noopener noreferrer"
            class="bg-primary-600 text-white px-4 py-2 rounded-lg text-sm font-medium hover:bg-primary-700 transition-colors shadow-sm"
          >
            Reservar Cita
          </a>
        </div>
      </div>

      <!-- Mobile menu button -->
      <div class="md:hidden">
        <button
          type="button"
          class="mobile-menu-button bg-gray-50 inline-flex items-center justify-center p-2 rounded-md text-gray-700 hover:text-primary-600 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-inset focus:ring-primary-500"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Abrir menú principal</span>
          <!-- Hamburger icon -->
          <svg class="block h-6 w-6" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" aria-hidden="true">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile menu -->
    <div class="mobile-menu hidden md:hidden">
      <div class="px-2 pt-2 pb-3 space-y-1 sm:px-3 bg-white border-t border-gray-100">
        <a href="#sobre-mi" class="text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-colors">
          Sobre mí
        </a>
        <a href="#servicios" class="text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-colors">
          Servicios
        </a>
        <a href="#testimonios" class="text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-colors">
          Testimonios
        </a>
        <a href="#precios" class="text-gray-700 hover:text-primary-600 block px-3 py-2 text-base font-medium transition-colors">
          Precios
        </a>
        <a 
          href="https://wa.me/34614417513?text=Hola%20Alexandra,%20me%20gustar%C3%ADa%20solicitar%20una%20consulta" 
          target="_blank"
          rel="noopener noreferrer"
          class="bg-primary-600 text-white block px-3 py-2 rounded-lg text-base font-medium hover:bg-primary-700 transition-colors shadow-sm mx-3 mt-4"
        >
          Reservar Cita
        </a>
      </div>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  document.addEventListener('DOMContentLoaded', function() {
    const button = document.querySelector('.mobile-menu-button');
    const menu = document.querySelector('.mobile-menu');
    
    if (button && menu) {
      button.addEventListener('click', function() {
        menu.classList.toggle('hidden');
      });
    }

    // Close mobile menu when clicking on links
    const mobileLinks = menu?.querySelectorAll('a');
    mobileLinks?.forEach(link => {
      link.addEventListener('click', () => {
        menu.classList.add('hidden');
      });
    });

    // Close mobile menu when clicking outside
    document.addEventListener('click', function(event) {
      if (!button?.contains(event.target) && !menu?.contains(event.target)) {
        menu?.classList.add('hidden');
      }
    });
  });
</script>